{
    "name": "@tool-belt/type-guards",
    "version": "1.0.0",
    "description": "Collection of performant type-guard utilities",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tool-belt/type-guards.git"
    },
    "keywords": [
        "type-assertions",
        "type-guards",
        "typescript",
        "utilities",
        "utils"
    ],
    "author": "Na'aman Hirschfeld",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tool-belt/type-guards/issues"
    },
    "homepage": "https://github.com/tool-belt/type-guards#readme",
    "files": ["dist"],
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rimraf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate",
        "format": "prettier --write '**/*.{js,md,json,yaml,yml}'",
        "lint": "eslint --fix '**/*.ts'",
        "prepare": "husky install",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^8.2.5",
        "@sprylab/eslint-config": "^1.5.4",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.4.7",
        "all-contributors-cli": "^6.20.0",
        "eslint": "^7.31.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "expect-type": "^0.12.0",
        "husky": ">=7",
        "jest": "^27.0.6",
        "lint-staged": ">=11",
        "prettier": "^2.3.2",
        "prettier-plugin-jsdoc": "^0.3.23",
        "rimraf": "^3.0.2",
        "rollup": "^2.56.0",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^27.0.4",
        "ts-node": "^10.1.0",
        "type-fest": "^1.4.0",
        "typescript": "^4.3.5"
    },
    "lint-staged": {
        "*.ts": "eslint --fix",
        "*.{js,md,json,yaml,yml}": "prettier --write"
    }
}
